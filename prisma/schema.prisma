generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Agora, modifique o modelo 'Athlete' que JÁ EXISTE
// Adicione a linha 'logEntries' dentro dele:

model Athlete {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  weightInKg    Float?
  heightInMeters Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  plans         MealPlan[] // Relação com planos alimentares
  logEntries    DailyLogEntry[] // <-- ADICIONE ESTA LINHA PARA A NOVA RELAÇÃO
}

model MealPlan {
  id        Int       @id @default(autoincrement())
  name      String    // Ex: "Plano de Ganho de Massa"
  createdAt DateTime  @default(now())
  
  // REMOVEMOS a referência direta a um único atleta (athleteId)
  
  // E ADICIONAMOS uma lista de atletas que usam este plano.
  athletes  Athlete[]
  
  items     FoodItem[]
}

model FoodItem {
  id          Int      @id @default(autoincrement())
  mealPlanId  Int
  
  foodId      String   // O ID do alimento vindo da API TACO
  foodName    String   // Ex: "Arroz, integral, cozido"
  quantity    Float    // Ex: 150
  unit        String   // Ex: "g" (gramas)
  mealType    String   // Ex: "Café da Manhã", "Almoço", "Jantar"

  // Define a relação: Este item pertence a um MealPlan.
  mealPlan    MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
}

model DailyLogEntry {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  eatenAt         DateTime // O dia e hora exatos que foi comido
  mealType        String   // "Café da Manhã", "Almoço", "Jantar", "Lanche"

  foodName        String   // "Arroz, integral, cozido"
  quantity        Float    // 150
  unit            String   // "g"

  // Os valores nutricionais calculados (pelo frontend) no momento do registro
  kcal            Float
  protein         Float
  carbohydrates   Float
  lipids          Float

  // Relação: Qual atleta registrou isso?
  athlete         Athlete  @relation(fields: [athleteId], references: [id], onDelete: Cascade)
  athleteId       Int
}
